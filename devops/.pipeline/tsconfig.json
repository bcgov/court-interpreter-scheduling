{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app-types/*":["./src/types/*"],
      "@lib/*":["./src/lib/*"],
      "@config/*":["./src/config/*"],
      "@apps/*": ["./src/apps/*"]
    }
  },
  "include": [
    "app.ts",
    "./src/**/*.ts",
    "./src/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "node_modules",
    "build",
    "dist"
  ],
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ]
}
